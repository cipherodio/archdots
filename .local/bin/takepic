#!/usr/bin/env bash
# Author: cipherodio
# Description: Toggle webcam preview using mpv

if pgrep -f "/dev/video0" >/dev/null 2>&1; then
    pkill -f "/dev/video0"
    exit 0
fi

exec mpv \
    --no-osc \
    --input-conf=/dev/null \
    --geometry=-0-0 \
    --autofit=30% \
    --title="mpvfloat" \
    --profile=low-latency \
    --untimed \
    /dev/video0
