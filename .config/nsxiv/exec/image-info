#!/usr/bin/env bash
# Author: cipherodio
# Description: nsxiv statusbar image information

set -euo pipefail

file="$1"

filename="$(basename -- "$file")"
filesize="$(du -Hh -- "$file" | cut -f1)"
geometry="$(identify -format '%wx%h' "${file}[0]")"

printf "%s | %s | %s\n" "$filesize" "$geometry" "$filename"
